<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="#ffeeeeee" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    
    <LinearLayout 
        android:gravity="center" 
        android:id="@+id/title" 
        android:background="@drawable/title_bar" 
        android:layout_width="fill_parent" 
        android:layout_height="45.0dip">
        <TextView 
            android:textSize="18.0sp" 
            android:textColor="#ff7f7f7f" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="发现" />
    </LinearLayout>
    
    <RelativeLayout 
        android:gravity="center_vertical" 
        android:background="@drawable/preference_item" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="14.0dip"
        android:onClick="GetMyFriendsListBtn">
        <ImageView 
            android:id="@+id/my_friends_list_img" 
            android:layout_width="35.0dip" 
            android:layout_height="35.0dip" 
            android:src="@drawable/my_friends" 
            android:scaleType="centerInside" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" />
        <TextView 
            android:textSize="16.0sp" 
            android:textColor="#ff000000" 
            android:padding="8.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="我的好友" 
            android:layout_toRightOf="@+id/my_friends_list_img" 
            android:layout_centerVertical="true" />
        <ImageView 
            android:layout_width="15.0dip" 
            android:layout_height="15.0dip" 
            android:src="@drawable/mm_submenu" 
            android:scaleType="centerInside" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout 
        android:gravity="center_vertical" 
        android:background="@drawable/preference_item" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:onClick="messageCenterBtn">
        <ImageView 
            android:id="@+id/my_messages_center_img" 
            android:layout_width="35.0dip" 
            android:layout_height="35.0dip" 
            android:src="@drawable/my_messages_center" 
            android:scaleType="centerInside" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" />
        <TextView 
            android:textSize="16.0sp" 
            android:textColor="#ff000000" 
            android:padding="8.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="消息中心" 
            android:layout_toRightOf="@+id/my_messages_center_img" 
            android:layout_centerVertical="true" />
        <ImageView 
            android:layout_width="15.0dip" 
            android:layout_height="15.0dip" 
            android:src="@drawable/mm_submenu" 
            android:scaleType="centerInside" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout 
        android:gravity="center_vertical" 
        android:background="@drawable/preference_item" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:onClick="peopleAroundBtn">
        <ImageView 
            android:id="@+id/surroundding_people_img" 
            android:layout_width="35.0dip" 
            android:layout_height="35.0dip" 
            android:src="@drawable/surrounding_people" 
            android:scaleType="centerInside" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" />
        <TextView 
            android:textSize="16.0sp" 
            android:textColor="#ff000000" 
            android:padding="8.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="周围的人" 
            android:layout_toRightOf="@+id/surroundding_people_img" 
            android:layout_centerVertical="true" />
        <ImageView 
            android:layout_width="15.0dip" 
            android:layout_height="15.0dip" 
            android:src="@drawable/mm_submenu" 
            android:scaleType="centerInside" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout 
        android:gravity="center_vertical" 
        android:background="@drawable/preference_item" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="29.0dip" 
        android:onClick="GetTodayWeather">
        <ImageView 
            android:id="@+id/today_weather_img" 
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:src="@drawable/weather" 
            android:scaleType="centerInside" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" />
        <TextView 
            android:textSize="16.0sp" 
            android:textColor="#ff000000" 
            android:padding="8.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="今日天气" 
            android:layout_toRightOf="@+id/today_weather_img" 
            android:layout_centerVertical="true" />
        <ImageView 
            android:layout_width="15.0dip" 
            android:layout_height="15.0dip" 
            android:src="@drawable/mm_submenu" 
            android:scaleType="centerInside" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout 
        android:gravity="center_vertical" 
        android:background="@drawable/preference_item" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:onClick="GoSearchView">
        <ImageView 
            android:id="@+id/book_img" 
            android:layout_width="35.0dip" 
            android:layout_height="35.0dip" 
            android:src="@drawable/book" 
            android:scaleType="centerInside" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" />
        <TextView 
            android:textSize="16.0sp" 
            android:textColor="#ff000000" 
            android:padding="8.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="图书信息查询" 
            android:layout_toRightOf="@+id/book_img" 
            android:layout_centerVertical="true" />
        <ImageView 
            android:layout_width="15.0dip" 
            android:layout_height="15.0dip" 
            android:src="@drawable/mm_submenu" 
            android:scaleType="centerInside" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>