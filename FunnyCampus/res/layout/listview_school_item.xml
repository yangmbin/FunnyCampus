<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/listview_bg"  >

    <!-- 头像和名字时间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/listview_school_item_img_head"
            android:layout_width="38dp"
            android:layout_height="38dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp" />
		
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp" >
            
            <TextView
	            android:id="@+id/listview_school_item_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:textColor="#58b62e"
	           	android:textSize="25px" />
            
            <TextView
	            android:id="@+id/listview_school_item_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:textColor="#cc5e33"
	           	android:textSize="16px"
	           	android:layout_marginTop="6dp" />
        </LinearLayout>
        

    </LinearLayout>

    <!-- 正文 -->
    <TextView
        android:id="@+id/listview_school_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="28px"
        android:layout_marginLeft="10dp" 
        android:layout_marginBottom="10dp" />

</LinearLayout>
