<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee" >
    
	    
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#eee"
		android:orientation="vertical" >
	      
	    <LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:id="@+id/title" 
			android:background="@drawable/title_bar"
			android:gravity="center_vertical"
			android:orientation="horizontal"  >  
	
	        <EditText
	            android:id="@+id/search_book_editText"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:hint="书名/关键字"
	            android:singleLine="true"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:textColor="#000"
	            android:drawableLeft="@drawable/search_bar_icon_normal"
	            android:background="@drawable/search_bar_edit_normal"
	            android:layout_centerVertical="true"
	            android:layout_weight="1"
	            android:layout_marginLeft="8dp" >               
	        </EditText>
	   
		    <Button 
			    android:id="@+id/search_book_right_btn"
			    android:layout_width="fill_parent" 
	       		android:layout_height="wrap_content"
	       		android:layout_alignParentRight="true" 
	       		android:layout_centerVertical="true"
	       		android:layout_marginRight="1dp"
				android:background="@drawable/title_btn_right"
				android:text="搜索"
				android:layout_weight="4"
				android:onClick="SearchBookInfoBtn"
			/>
		</LinearLayout>
		
	    <LinearLayout 
	        android:id="@+id/book_info_linearlayout" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:visibility="invisible" >
		    
		    <!-- 显示书的信息 -->
		    <TextView
		        android:id="@+id/book_name_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="TextView"
		        android:textSize="25sp"
		        android:textColor="#000000"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="5dp"
		        android:textStyle="bold" />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dp"
		        android:gravity="center_horizontal" >
		
		        <ImageView
		            android:id="@+id/book_pic_imageView"
		            android:layout_width="110sp"
		            android:layout_height="140sp"
		            android:src="@drawable/default_img"
		            android:layout_gravity="center_vertical" />
		
		        <TextView
		            android:id="@+id/book_detail_textView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="TextView"
		            android:textColor="#000000"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="8dp" />
			    
		    </LinearLayout>
		
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dp" 
		        android:gravity="center_horizontal">
		        
		        <TextView 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000000"
			        android:text="Tag：" />
		        <TextView
			        android:id="@+id/book_tags_textView"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="TextView"
			        android:textColor="#58b62e" />
		    </LinearLayout>
		    
		    <View  
		   		android:layout_width="fill_parent"  
		    	android:layout_height="1px" 
		   		android:background="#BFBFBF"  
			/>
		
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:textSize="19dp"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="10dp"
		        android:text="概要"
		        android:textColor="#2f4f4f" />
		    <TextView
		        android:id="@+id/author_info_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="TextView"
		        android:layout_marginTop="10dp"
		        android:textSize="14dp"
		        android:layout_gravity="center_horizontal"
		        android:textColor="#696969"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp" />
		    
		    <View  
		   		android:layout_width="fill_parent"  
		    	android:layout_height="1px" 
		   		android:background="#BFBFBF"  
			/>
		    
		    
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:textSize="19dp"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="10dp"
		        android:text="作者"
		        android:textColor="#2f4f4f" />
		    
		    <TextView
		        android:id="@+id/content_summary_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="TextView"
		        android:layout_marginTop="10dp"
		        android:textSize="14dp"
		        android:layout_gravity="center_horizontal"
		        android:textColor="#696969"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp" />
	    </LinearLayout>
	
	</LinearLayout>
    

</ScrollView>