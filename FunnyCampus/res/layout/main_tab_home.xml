<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="#ffeeeeee" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    <RelativeLayout 
        android:gravity="center_vertical" 
        android:id="@+id/title" 
        android:background="@drawable/title_bar" 
        android:layout_width="fill_parent" 
        android:layout_height="45.0dip">
        <TextView 
            android:textSize="18.0sp" 
            android:textColor="#ff7f7f7f" 
            android:id="@+id/top_title_4" 
            android:padding="10.0dip" 
            android:focusable="true" 
            android:focusableInTouchMode="true" 
            android:clickable="true" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="校园趣事" 
            android:drawableRight="@drawable/top_text_right" 
            android:layout_centerInParent="true" 
            android:background="@drawable/btn_style_top_menu"
            android:onClick="HomeTopMenu" />
        <ImageView 
            android:background="@drawable/camera_right" 
            android:layout_width="32.0dip" 
            android:layout_height="24.0dip" 
            android:layout_marginRight="12.0dip" 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" 
            android:onClick="sendMessage" />
    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView 
        android:id="@+id/listview_school" 
        android:fadingEdge="none" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:cacheColorHint="#00000000" 
        android:divider="#00bfbfbf" 
        android:dividerHeight="0.0dip" 
        android:fastScrollEnabled="false" 
        android:headerDividersEnabled="false" 
        android:footerDividersEnabled="false" 
        android:smoothScrollbar="true" />
</LinearLayout>